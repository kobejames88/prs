node {
   def mvnHome
   stage('Preparation') { // for display purposes
      git credentialsId: 'c5d9fa23-90f9-4b8c-8b29-8e954207de6b', url: 'https://git.coding.net/wisesystem/wisesystem-bns.git'
      // Get the Maven tool.
      // ** NOTE: This 'M3' Maven tool must be configured
      // **       in the global configuration.

      mvnHome = tool 'M3'
   }
   stage('Build') {
      // Run the maven build
      if (isUnix()) {
         sh "'${mvnHome}/bin/mvn' -DskipTests clean package"
         sh "'${mvnHome}/bin/mvn' sonar:sonar -Dsonar.host.url=http://10.125.128.18:9001 -Dsonar.login=d46c6f57bfc0186b7a8c8ff9f562ecdf47322f95"
      } else {
         bat(/"${mvnHome}\bin\mvn" -Dmaven.test.failure.ignore clean package/)
      }
   }
  state('build-dockerpush') {
      sshPublisher(publishers: [sshPublisherDesc(configName: 'chinaunicom', transfers: [sshTransfer(excludes: '', execCommand: 'source /home/pjsong/jenkins_ssh/build-chinaunicom.sh', execTimeout: 120000, flatten: false, makeEmptyDirs: false, noDefaultExcludes: false, patternSeparator: '[, ]+', remoteDirectory: '', remoteDirectorySDF: false, removePrefix: '', sourceFiles: '/var/jenkins_home/workspace/bns/target/*.jar, /var/jenkins_home/workspace/bns/Dockerfile, /var/jenkins_home/workspace/bns/build-chinaunicom.sh')], usePromotionTimestamp: false, useWorkspaceInPromotion: false, verbose: false)])
      }
   stage('Results') {
 //     junit '**/target/surefire-reports/TEST-*.xml'
 //     archiveArtifacts 'target/*.jar'
   }
}
